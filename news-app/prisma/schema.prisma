// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/home/alex/Documents/Databases/news.db"
}

model User {
  id            String          @id
  roleId        Int
  role          Role            @relation(fields: [roleId], references: [id])
  userFeeds     UserFeeds[]
  userFavorites UserFavorites[]
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model UserFeeds {
  userId     String
  feedName   String
  categories String?
  languages  String?
  sources    String?
  user       User    @relation(fields: [userId], references: [id])

  @@id([userId, feedName])
}

model UserFavorites {
  userId     String
  source     String
  title      String
  url        String
  image      String?
  category   String
  uploadDate DateTime
  user       User     @relation(fields: [userId], references: [id])

  @@id([userId, url])
}
