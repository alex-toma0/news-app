generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/home/alex/Documents/Databases/news.db"
}

model userFeeds {
  user_id    String
  feed_name  String
  categories String?
  languages  String?
  sources    String?

  @@id([user_id, feed_name])
}

model userFavorites {
  user_id    String
  source     String
  title      String
  url        String
  image      String?
  uploadDate DateTime

  @@id([user_id, url])
}

model users {
  user_id String @id
}
